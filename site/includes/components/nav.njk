{# 'sr-only' is toggled off when mobile nav is opened. #}
{# did it this way so mobile sr users don't have to toggle the nav; it's just there. #}
<nav class="sr-only w-full z-10 absolute top-headerHeight lg:ml-auto lg:static lg:not-sr-only lg:px-4">

{% set navPages = collections.all | eleventyNavigation %}

{% macro renderNavListItem(entry) -%}

{% set activeClass %}{% if entry.url == page.url %}cmp-active-link{% endif %}{% endset %}

<li class="{{activeClass}} bg-light border-b border-dark border-light lg:bg-transparent lg:border-none last:border-none hover:text-accent3">
  <a class="uppercase font-title block p-6 lg:py-4" href="{{ entry.url | url }}">{{ entry.title }}</a>
</li>
{%- endmacro %}

<ul class="flex flex-col w-full lg:flex-row lg:w-auto shadow-lg lg:shadow-none">
  {%- for entry in navPages %}{{ renderNavListItem(entry) }}{%- endfor -%}
</ul>
</nav>